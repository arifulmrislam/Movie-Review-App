{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["ES6", "DOM"],
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"], // Include all TypeScript and TSX files in the src folder
  "include": ["src/**/*", "backend/**/*"],
  "exclude": ["node_modules", "dist"]
}
